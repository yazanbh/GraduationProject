<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="16"
    android:background="@drawable/circular_present"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="12sp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/student_name_detail_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="يزن محمود فهد بني هاني"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#B5000000"
            android:gravity="left"            />
        <TextView
            android:id="@+id/student_regNo_detail_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B5000000"
            android:layout_marginLeft="10dp"
            android:text="2000901023"
            android:textSize="14sp"
            android:gravity="left"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        >
      <CheckBox
          android:id="@+id/checkbox"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Present"
          android:textSize="13sp"
          android:gravity="center"
          android:layout_margin="10sp"
          android:paddingRight="10sp"/>

    </LinearLayout>


</LinearLayout>